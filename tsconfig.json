{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "react": ["./node_modules/@types/react"],
      "@/*": ["./src/*"],
      "@components/*": [
        "./src/components/share-components/*"
      ],
      "@charts/*": [
        "./src/components/chart-components/*"
      ],
      "@layoutComponents/*": [
        "./src/components/layout-components/*"
      ],
      "@utilComponents/*": [
        "./src/components/util-components/*"
      ],
      "@layouts/*": ["./src/layouts/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
